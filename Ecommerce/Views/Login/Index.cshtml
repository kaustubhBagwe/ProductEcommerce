
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap core CSS-->
    <link href="~/Content/AdminContent/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="~/Content/AdminContent/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="~/Content/AdminContent/css/sb-admin.css" rel="stylesheet">
</head>
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header" style="color: #828181;">
                <i class="fas fa-sign-in-alt"></i>
               Admin Login
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <div class="form-label-group">
                            @*@Html.EditorFor(c=>c.UserEmailID,"", new { name = "UserEmailID" ,@class="form-control" ,@placeholder="Email address" ,@required="required", @autofocus="autofocus" ,type= "email" })*@
                            <input type="email" id="UserEmailID" name="UserEmailID" class="form-control" placeholder="Email address" required="required" autofocus="autofocus">
                            <label for="UserEmailID">Email address</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @*@Html.EditorFor(c => c.Password, "", new { name = "UserEmailID", @class = "form-control", @placeholder = "Password", @required = "required", @autofocus = "autofocus",type="password" })*@
                            <input type="password" id="Password" name="Password" class="form-control" placeholder="Password" required="required">
                            <label for="Password">Password</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" value="remember-me">
                                Remember Password
                            </label>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary btn-block" value="Login" />
                    if (TempData["message"] != null)
                    {
                        <br />
                        <div class="form-group">
                            <div class="alert alert-danger">
                                <strong>Error !</strong> @TempData["message"].ToString()
                            </div>
                        </div>

                    }
                }
                <br />
                <div>
                    @*<a class="d-block small mt-3" href="register.html">Register an Account</a>*@
                    <a class="d-block small" style="display:inline-block;width:50%;float: right;text-align: right;text-decoration:none" href="/login/trouble_inlogin">Trouble in Login?</a>
                    <a class="d-block small" style="display:inline-block;width:50%;text-decoration:none" href="/Login/Forgorpssword">Forgot Password</a>
                </div>
                <hr />
                <div class="text-center">
                    @*<a class="d-block small mt-3" href="register.html">Register an Account</a>*@
                    <a class="d-block small" href="#" style="text-decoration: none;color: #828282;font-weight: bold;">Hand Crafted By Kaustubh Bagwe  2018</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/AdminContent/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/AdminContent/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/AdminContent/vendor/jquery-easing/jquery.easing.min.js"></script>
</body>
</html>
