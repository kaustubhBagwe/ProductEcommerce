@using PagedList;
@using PagedList.Mvc;
@model  IPagedList<Ecommerce.Models.Discount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<p>
    @Html.ActionLink("Add Discount", "Create", null, new { @class="btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
           Discount Code
        </th>
        <th>
           Discount Title
        </th>
        
        
        <th>
           Start Date
        </th>
        <th>
           End Date
        </th>
        
        <th>
           Created Date
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountTitle)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.DiscountStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountEndDate)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.InsertDate)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DicountID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DicountID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DicountID })
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))