@model IEnumerable<Ecommerce.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Dashbord/Index">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Category</li>
    </ol>

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Category Details
            @Html.ActionLink("Create New", "Create", null, new { @style = "float:right" })
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th nowrap>
                                <span>Category Name</span>
                            </th>
                            <th nowrap>
                                <span>Category Description</span> 
                            </th>

                            @*<th nowrap></th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td nowrap>
                                    @Html.ActionLink(item.CategoryName, "Edit", new { id = item.ID })      
                                </td>
                                <td nowrap>
                                    <span>@item.CategoryDescription</span>
                                </td>

                                @*<td nowrap>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>*@
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>